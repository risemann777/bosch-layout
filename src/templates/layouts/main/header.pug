.header-top
  .header-top__container
    .header-top__wrapper
      a(href="/").header-top__brand: svg(class="svg-icon" viewBox="0 0 433 97" width="433" height="98"): use(xlink:href="#svg-logo")
      .header-top__contacts
        a(href="mailto:bosch@by.bosch.com").header-contact
          svg(class="svg-icon" viewBox="0 0 24 24" width="24" height="24"): use(xlink:href="#svg-email")
          span bosch@by.bosch.com
        a(href="tel:+7 (495) 560-9-560").header-contact
          svg(class="svg-icon" viewBox="0 0 24 24" width="24" height="24"): use(xlink:href="#svg-phone")
          span +7 (495) 560-9-560

.header-nav
  .header-nav__container
    .header-nav__navbar
      nav.navbar
        ul.navbar__list
          li.navbar__item.navbar__item--dropdown
            a(href="products-and-services.html").navbar__link
              span Продукция и услуги
              svg(class="svg-icon navbar__arrow navbar__arrow--root" viewBox="0 0 1024 1024" width="14" height="14"): use(xlink:href="#svg-arrow-down")
            ul.navbar__dropdown
              li: a(href="/products-and-services--mobility/") Решения для мобильности
              li: a(href="/products-and-services--at-home/") Для дома
              li: a(href="/products-and-services--industry-and-trades/") Промышленность и торговля
          li.navbar__item.navbar__item--dropdown
            a(href="our-company.html").navbar__link
              span О компании
              svg(class="svg-icon navbar__arrow navbar__arrow--root" viewBox="0 0 1024 1024" width="14" height="14"): use(xlink:href="#svg-arrow-down")
            ul.navbar__dropdown
              li: a(href="/our-company--bosch-in-russia") Bosch в России
              li.navbar__dropdown-item--parent
                a(href="/our-company--our-responsibility")
                  span Наша ответственность
                  svg(class="svg-icon navbar__arrow" viewBox="0 0 1024 1024" width="12" height="12"): use(xlink:href="#svg-arrow-right")
                ul
                  li: a(href="/our-company--our-responsibility--stability") Устойчивое развитие
                  li: a(href="") Наши ценности
              li: a(href="/our-company--our-history") Наша история
              li
                a(href="/our-company--bosch-group-worldwide") Компания Bosch в мире
          li.navbar__item
            a(href="news.html").navbar__link Новости и проекты
          li.navbar__item
            a(href="/").navbar__link Контакты
      .header-nav__controls
        .header-nav__contact-link(data-drawer-toggle="feedbackDrawer" aria-label="Кнопка обратной связи"): img(src="images/icons/chat_icon.png")
        .header-nav__location.location
          .location__country(data-drawer-toggle="countrySelect")
            svg(class="svg-icon" viewBox="0 0 24 24" width="21" height="21"): use(xlink:href="#svg-location")
            .location__country-name Россия
          include ../../components/blocks/location-popup
